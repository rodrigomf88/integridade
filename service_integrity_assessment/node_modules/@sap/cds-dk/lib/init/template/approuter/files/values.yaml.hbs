---
approuter:
  image:
    repository: <your-container-registry>/{{appName}}-approuter
    tag: latest
{{#hasMultitenancy}}
{{=<% %>=}}
  env:
    TENANT_HOST_PATTERN: ^(.*)-{{ .Release.Name }}-approuter-{{ .Release.Namespace }}.{{ .Values.global.domain }} # change if expose.host is set
<%={{ }}=%>
{{/hasMultitenancy}}
  resources:
    limits:
      ephemeral-storage: 1G
      memory: 500M
    requests:
      ephemeral-storage: 1G
      cpu: 500m
      memory: 500M
  health:
    liveness:
      path: /
    readiness:
      path: /
backendDestinations: {}
{{^hasMultitenancy}}
srv:
  expose:
    enabled: false
  networkSecurity:
    allowNamespaceInternal: true
{{/hasMultitenancy}}